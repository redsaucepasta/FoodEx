<%- include("partials/header") -%>




<div class=" centered landing-desc-menu landing-align-menu">
  <div class="menu-card">
    <h3><%= outletName %> Menu </h3>
    <hr>
    <form action="/menu/<%= outletId %>" method="POST">
      <% (menu.item).forEach(function(item){%>
      <div >
        <strong class="menu-start"><%= item.name %></strong>  
        <select name="<%= item.name %>" class="menu-price">
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <span class="menu-price">Rs. <%= item.price %></span>
      </div>
      <br>
      <% }); %>
      <input class="btn btn-dark" type="submit" value="Add to Cart">
    </form>
  </div>
</div>




<%- include("partials/footer") -%>
