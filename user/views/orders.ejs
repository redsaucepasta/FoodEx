<%- include("partials/header") -%>


<h2><br>Your orders will be displayed below.</h2>
<hr>
<br>
<br>

<% orders.forEach(function(order){ %>
  <h4><%= order.status %></h4>
  <p><strong>Outlet: </strong> <%= order.outletName %></p>
  <p><strong>Total: </strong> <%= order.total %></p>
  <p><strong>Payment Method: </strong> <%= order.payment %></p>
  <% (order.item).forEach(function(item){ %>
    <ul>
      <li><%= item.name %> (Rs.<%= item.price %>)</li>
      <p>Quantity: <%= item.quantity %></p>
    </ul>
  <% }); %>
  <p><strong>Ordered on: </strong> <%= order.createdAt %></p>
  <p><%= order.outletName %> contact number: <%= order.outletPhone %></p>
  <hr><br>
<% }); %>


<%- include("partials/footer") -%>
