<%- include("partials/header") -%>

<!-- <div class="container"> -->
  <h2>Cart</h2>
  <br>
  <h4>Outlet: <%= outlet %></h4>
  <h5>Total: <%= carttotal %></h5>
  <div class="card cart-card">
  <% cart.forEach(function(item){ %>
    <div class="card-body">
        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="menu-q">
              <span class="cart-item"><strong><%= item.name %></strong></span>
              <span class="cart-item-q">Quantity: <%= item.quantity %></span>
              <a class="btn btn-outline-dark rem-bt" href="/delete/<%= item._id %>" role="button">Remove</a>
              <p><span class="cart-item-p">Price: <%= item.price %></span></p>
            </div>
          </div>
        </div>
      </div>
        <% }); %>
    </div>

  <br>
  <form action="/placeorder" method="post">
    <p>
    <label for="block">Payment Method</label>
    <select id="block" name="payment">
      <option value="Paytm">Paytm</option>
      <option value="Cash">Cash</option>
    </select></p>
    <input type="submit" class="btn btn-lg btn-outline-danger sub-bt" value="Place order">
  </form>
  <hr>
  <br><br>
<!-- </div> -->





<%- include("partials/footer") -%>
