const requestedOutletId = req.params.outletId;
Menu.findOne({_id: requestedOutletId}, function(err, foundMenu) {
  res.render("menu", {menu: foundMenu});
});





let body = req.body;
for(let itemname in body){
  itemq = body[itemname];
  if(itemq>0){
    res.write(itemname+" : "+itemq+"\n");
  }
}

res.send();




