<%- include("partials/header") %>

<div class="container mt-5">
  <h1>Menu </h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <form action="/menu/<%= outletId %>" method="POST">
            <% (menu.item).forEach(function(item){%>
            <p><strong><%= item.name %></strong> : Rs. <%= item.price %>
            <input type="number" name="<%= item.name %>" min="0"></p><br>
            <% }); %>
            <input class="btn btn-dark" type="submit" value="Add to Cart">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<%- include("partials/footer") %>
